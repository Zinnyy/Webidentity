@using Webidentity.Areas.Identity.Data;

@model ApplicationUser



<div class="container card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Deactivate Information</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            @*<input asp-for="Id" hidden>*@
            <div class="border p-3 mt-4">

                <div class="form-floating py-2 col-12">

                    <input asp-for="FistName" class="form-control border-0 shadow">
                    <label asp-for="FistName" class="ms-2"></label>
                    <span asp-validation-for="FistName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Lastname" class="form-control border-0 shadow">
                    <label asp-for="Lastname" class="ms-2"></label>
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow">
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Location" class="form-control border-0 shadow">
                    <label asp-for="Location" class="ms-2"></label>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Phone" class="form-control border-0 shadow">
                    <label asp-for="Phone" class="ms-2"></label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Bio" class="form-control border-0 shadow">
                    <label asp-for="Bio" class="ms-2"></label>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control text-light">Deactivate</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary border form-control">Cancel</a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }




